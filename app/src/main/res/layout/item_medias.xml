<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="8dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        android:backgroundTint="@color/platinum"
        android:minHeight="50dp"
        android:foreground="@drawable/card_border">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <!--Informações do aluno-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="N° "
                    android:layout_marginLeft="8dp"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/azulforte"/>

                <TextView
                    android:id="@+id/tvMatricula"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/azulforte"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.01"
                    android:text=" - "
                    android:gravity="left"
                    android:textColor="@color/azulforte"
                    android:fontFamily="@font/raleway_bold"/>

                <TextView
                    android:id="@+id/tvNome"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="18sp"
                    android:fontFamily="@font/raleway_bold"
                    android:textColor="@color/azulforte"/>

                <ImageView
                    android:id="@+id/imgArrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrowright"
                    android:layout_marginRight="8dp"/>
            </LinearLayout>

            <!--Card Expansível-->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardNotas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:backgroundTint="@color/platinum"
                android:padding="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--Itens do topo-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:fontFamily="@font/raleway_regular"
                            android:textColor="@color/richblack"
                            android:text="Nota Trabalho"
                            android:gravity="center"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:text="Nota Prova"
                            android:fontFamily="@font/raleway_regular"
                            android:textColor="@color/richblack"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- 1° Bimestre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/richblack"
                            android:text="1° Bimestre"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:id="@+id/notaTrabalho1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/notaProva1"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- 2° Bimestre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/richblack"
                            android:text="2° Bimestre"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:id="@+id/notaTrabalho2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/notaProva2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- 3° Bimestre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/richblack"
                            android:text="3° Bimestre"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:id="@+id/notaTrabalho3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/notaProva3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout>

                    <!-- 4° Bimestre -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="10dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="18sp"
                            android:fontFamily="@font/raleway_medium"
                            android:textColor="@color/richblack"
                            android:text="4° Bimestre"
                            android:layout_marginLeft="6dp"/>

                        <TextView
                            android:id="@+id/notaTrabalho4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>

                        <TextView
                            android:id="@+id/notaProva4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="15sp"
                            android:gravity="center"/>
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
