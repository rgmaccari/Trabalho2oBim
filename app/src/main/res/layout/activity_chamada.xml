<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.ChamadaActivity"
    android:background="@color/whitesmoke"
    android:padding="5dp">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="35dp">

      <Button
          android:id="@+id/btnVoltar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Voltar"
          android:backgroundTint="@color/azulforte"
          android:layout_marginRight="5dp"
          android:fontFamily="@font/raleway_light"
          android:layout_weight="1"
          android:padding="0dp"/>

      <Button
          android:id="@+id/btnDisciplina"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginRight="5dp"
          android:fontFamily="@font/raleway_light"
          android:textColor="@color/richblack"
          android:backgroundTint="@color/cinzinha"
          android:text="Disciplina"
          android:padding="0dp"/>


      <Button
          android:id="@+id/btnTurma"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:layout_marginRight="5dp"
          android:textColor="@color/richblack"
          android:fontFamily="@font/raleway_light"
          android:backgroundTint="@color/cinzinha"
          android:text="Turma"
          android:padding="0dp"/>

      <Button
          android:id="@+id/btnData"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_weight="1"
          android:textColor="@color/richblack"
          android:fontFamily="@font/raleway_light"
          android:backgroundTint="@color/cinzinha"
          android:text="Data"
          android:padding="0dp"/>



   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_marginTop="10dp"
       android:layout_marginLeft="10dp">

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="N°"
          android:layout_marginLeft="10dp"
          android:layout_weight="2"
          android:fontFamily="@font/raleway_semibold"
          android:textColor="@color/richblack"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Nome"
          android:layout_weight="1"
          android:fontFamily="@font/raleway_semibold"
          android:textColor="@color/richblack"/>

      <TextView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:text="Presença"
          android:layout_weight="2"
          android:fontFamily="@font/raleway_semibold"
          android:textColor="@color/richblack"
          android:layout_marginRight="12dp"/>

   </LinearLayout>

   <androidx.cardview.widget.CardView
       android:id="@+id/cardView"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_margin="10dp"
       app:cardElevation="8dp"
       app:cardCornerRadius="16dp"
       android:backgroundTint="@color/platinum"
       android:visibility="gone">

      <androidx.recyclerview.widget.RecyclerView
         android:id="@+id/recyclerView"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:layout_margin="10dp">
      </androidx.recyclerview.widget.RecyclerView>

   </androidx.cardview.widget.CardView>


<Button
       android:id="@+id/btnSalvar"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:text="Salvar"
       android:visibility="gone"/>

</LinearLayout>